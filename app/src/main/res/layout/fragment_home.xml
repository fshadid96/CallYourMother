<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout2">

    <!-- Top Contact Title -->

    <TextView
        android:id="@+id/topContactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Top Contacts"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Top Contact Buttons -->
    <TextView
        android:id="@+id/top_con1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/top_con2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_con1" />

    <TextView
        android:id="@+id/top_con3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_con2" />

    <TextView
        android:id="@+id/top_con4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_con3" />

    <TextView
        android:id="@+id/top_con5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_con4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="322dp"
        android:layout_height="21dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:text="Click a contact to reveal their number!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContactText" />

    <View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="@android:color/darker_gray"
    android:layout_below="@id/top_con5"
    />

    <!-- Suggestion Title -->
    <TextView
    android:id="@+id/suggestionText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="@string/suggestion_text"
    android:layout_below="@id/top_con5"
    android:textSize="30sp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_con5"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"


    />
    <!-- Suggestion Button -->
    <TextView
    android:id="@+id/sugg_con1"
    android:layout_width="fill_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_below="@id/suggestionText"
    android:layout_marginBottom="10dp"
    android:textStyle="bold"
    android:layout_height="40dp"
    android:textSize="23sp"
    android:gravity="center"
    android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestionText"
        android:background="@color/colorPrimary"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
    />
    <TextView
    android:id="@+id/sugg_con2"
    android:layout_width="fill_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_below="@id/sugg_con1"
    android:layout_marginBottom="10dp"
    android:textStyle="bold"
    android:layout_height="40dp"
    android:textSize="23sp"
    android:gravity="center"
    android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sugg_con1"
        android:background="@color/colorPrimary"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
    />
    <TextView
    android:id="@+id/sugg_con3"
    android:layout_width="fill_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_below="@id/sugg_con2"
    android:textStyle="bold"
    android:layout_height="40dp"
    android:textSize="23sp"
    android:gravity="center"
    android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sugg_con2"
        android:background="@color/colorPrimary"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
    />

</android.support.constraint.ConstraintLayout>

